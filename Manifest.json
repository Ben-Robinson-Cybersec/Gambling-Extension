        "https://www.allbritishcasino.com/*",
        "https://www.betfred.com/*",
        "https://www.bet365.com/*",
        "https://www.WilliamHill.com/*",
        "https://www.betmgm.com/*",
        "https://www.Betway.com/*",
        "https://www.10bet.com/*",
        "https://www.neptuneplay.com/*",
        "https://www.Fitzdares.com/*",
        "https://www.mrvegas.com/*",
        "https://www.pubcasino.co.uk/*",
        "https://www.playojo.com/*",
        "https://www.slotsnplay.com/*",
        "https://www.casinocasino.com/*",
        "https://www.talksportbet.com/*",
        "https://www.spinandwin.com/*",
        "https://www.magicred.com/*",
        "https://www.666casino.com/*",
        "https://www.redaxeplay.com/*",
        "https://www.winomania.co.uk/*",
        "https://www.funcasino.com/*",
        "https://www.casushi.com/*",
        "https://www.greatbritaincasino.com/*",
        "https://www.betvictor.com/*",
        "https://www.privewin.com/*",
